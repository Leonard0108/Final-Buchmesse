package kickstart.Equipment;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.*;

import java.util.UUID;

@Controller
public class CatalogController {

    private final EquipmentCatalog catalog;

    public CatalogController(EquipmentCatalog catalog) {
        this.catalog = catalog;
    }

    @GetMapping("/equipment/{type}")
    public String equipmentByType(@PathVariable String type, Model model) {
        model.addAttribute("catalog", catalog.findByType(type));
        model.addAttribute("title", "Available " + type + "s");
        return "catalog";
    }

    @GetMapping("/equipment/detail/{id}")
    public String equipmentDetail(@PathVariable UUID id, Model model) {
        Equipment equipment = catalog.findById(id).orElseThrow();
        model.addAttribute("equipment", equipment);
        return "detail";
    }
}
